<!-- views/partials/nav.ejs -->
<ul class="nav-wrapper">
    <li class="left">
        <a href="/techniques" class="brand-logo left">SYT</a>
    </li>

    <% if (currentUser) { %>
        <!-- Logout Button -->
        <li class="right">
            <form action="/sessions?_method=DELETE" method="POST">
                <input class="btn nav-btn" type="submit" value="Logout"/>
            </form>
        </li>
        <li class="right">
            <form action="/users" method="GET">
                <input class="btn nav-btn" type="submit" value="Favorites">
            </form>
        </li>
        <li class="right">Welcome <%= currentUser.username%>!</li>
    <% } else { %>
        <li class="right">
            <!-- controllers/users_controller.js new route -->
            <a href="/users/new">Sign Up</a>
        </li>
        <li class="right">
            <!-- controllers/users_controller.js new route -->
            <a href="/sessions/new">Log In</a>
        </li>
    <% } %>
</ul>