<!DOCTYPE html>
<html lang="en">
<head>
    <% include ../partials/head.ejs %>
</head>
<body>
    <nav>
        <% include ../partials/nav.ejs %>
    </nav>
    <main class="container">
        <h1 class="center-align"><%= currentUser.username %>'s Favorites</h1>
        <div class="divider"></div>
        <!-- Favorites load here -->
        <div class="row">
            <% favorites.forEach((technique) => { %>
                <div class="col s12 m6 l4">
                    <div class="card hoverable">
                        <div class="card-image">
                            <a href="/techniques/<%= technique.id %>">
                                <img src="https://img.youtube.com/vi/<%= technique.videoId %>/hqdefault.jpg" alt="Youtube thumbnail <%= technique.title %>">
                            </a>
                        </div>
                        <div class="card-content">
                            <h5><%= technique.title %></h5>
                        </div>
                        <form class="center" action="/users/<%= technique.id %>?_method=DELETE" method="POST">
                            <input class="btn btn-flat btn-remove" type="submit" value="Remove Favorite">
                        </form>
                    </div>
                </div>
            <% }) %> 
        </div>
    </main>
</body>
</html>